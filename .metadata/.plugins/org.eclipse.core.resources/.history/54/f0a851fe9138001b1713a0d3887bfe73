server:
   port: 9095
   
   
spring:
  cloud:
    gateway:
      routes:
      - id: DEPARTMENT-SERVICE
        uri: lb://DEPARTMENT-SERVICE
        predicates:
        - Path=/department/**
        filters:
         - name: CircuirBreaker
           args:
            name: DEPARTMENT-SERVICE
            fallbackuri: forward:/department
      - id: EMPLOYEE-SERVICE
        uri: lb://EMPLOYEE-SERVICE
        predicates:
        - Path=/employees/**
        filters:
         - name: CircuirBreaker
           args:
            name: EMPLOYEE-SERVICE
            fallbackuri: forward:/employees
  application:
    name: API-GATEWAY-Service
    
    
eureka:
  instance:
    hostname: localhost
  client:
    registerWithEureka: true
    fetchRegistry: true
    serviceUrl:
      defaultZone: http://localhost:8761/eureka/
      
   
management:
  endpoints:
    web:
      exposure:
        include: "*"
       
      
hystrix:
  command:
   execution:
    isolation:
     thread:
      timeoutInMilliseconds:4000    
